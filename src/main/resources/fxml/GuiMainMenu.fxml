<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<?import java.net.URL?>
<StackPane prefHeight="400.0" prefWidth="600.0" styleClass="rootPane"
           xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="it.polimi.ingsw.client.view.GuiMenuController">
   <stylesheets>
      <URL value="@../css/global.css"/>
      <URL value="@../css/menu_scene.css"/>
   </stylesheets>
   <Group StackPane.alignment="CENTER">
      <TextField fx:id="nickname" layoutX="220.0" layoutY="200.0" styleClass="text" prefHeight="40.0" prefWidth="200.0"
                 promptText="Nickname"/>
      <Label fx:id="mainMessage" alignment="CENTER" layoutX="75.0" layoutY="160.0" styleClass="label" prefHeight="20.0"
             prefWidth="500.0" text="Please choose your nickname" textFill="#d2d2d2"/>
      <Button id="start" layoutX="100.0" layoutY="270.0" styleClass="button" mnemonicParsing="false" onAction="#start"
              prefHeight="40.0" prefWidth="200.0" text="Start new match"/>
      <Button id="resume" layoutX="345.0" layoutY="270.0" styleClass="button" mnemonicParsing="false" onAction="#resume"
              prefHeight="40.0" prefWidth="200.0" text="Resume match"/>
   </Group>
</StackPane>
